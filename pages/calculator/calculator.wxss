page
{
  height: 100%;
  width: 100%;
}

 #showbox{
  height: 300rpx;
  padding: 10rpx 20rpx;
  text-align: right;
  box-sizing: border-box;
  border-top: 1px solid #ccc; 
  border-bottom: 1px solid #ccc; 
  
  line-height: 300rpx;
}
.fontSizeA
{
  font-size: 200rpx;
}

.fontSizeB
{
  font-size: 100rpx;
}
.btns
{
  height:900rpx;
  padding: 10rpx 20rpx;  
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.row
{
  height: 180rpx;
  flex-direction: row; 
  padding: 1rpx 20rpx;
  overflow: hidden;
  text-align: center;
} 

.btn
{
  color: #333;
  font-size: 60rpx;
  display: inline-block;
  box-sizing: border-box;
  height: 150rpx;
  width: 150rpx;
  border: 1px solid #ccc;
  padding: 10rpx;
  border-radius: 75rpx; 
  margin: 0 8rpx;
  line-height: 130rpx;
}

.special
{
  width: 320rpx;
}

.select
{
  border:1px #eee111 solid;
}
